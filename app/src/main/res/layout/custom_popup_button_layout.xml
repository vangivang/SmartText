<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/popup_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    >

    <ImageButton
        android:id="@+id/popupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/popup_button_transition"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/popupButtonCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/popup_button_coupon_transition"
        android:layout_alignLeft="@+id/popupButton"
        android:layout_alignStart="@+id/popupButton"
        android:layout_alignBottom="@+id/popupButton"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>