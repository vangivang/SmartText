            <!--android:layout_marginBottom="10dp"-->
            <!--android:scaleX="-1"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="15dp"-->
            <!--/>-->

    </RelativeLayout>

    <!-- Footer -->
    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer">

        <EditText
            android:id="@+id/etMessageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text_focus"
            android:ems="10"
            android:hint="Tap to enter message"
            android:inputType="textMultiLine"
            android:maxHeight="100dp"
            android:maxLines="2">

        </EditText>

        <ImageView
            android:id="@+id/btnIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left|center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:src="@drawable/btn_list"
            android:text="Icons"/>

        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:src="@drawable/btn_send_sms"
            android:text="Send"/>

    </FrameLayout>

    <com.msgme.msgme.customViews.CustomPopupButton
        android:id="@+id/customPopupButton_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        />

    <com.msgme.msgme.customViews.CustomPopupButton
        android:id="@+id/customPopupButton_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_marginBottom="5dp"
        android:scaleX="-1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />

    <View
        android:id="@+id/black_curtain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="invisible"
        />

    <com.msgme.msgme.customViews.RoundedLayout
        android:id="@+id/rounded_layout"
        android:layout_width="250dp"
        android:layout_height="310dp"
        android:layout_above="@+id/customPopupButton_left"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        />

</RelativeLayout>