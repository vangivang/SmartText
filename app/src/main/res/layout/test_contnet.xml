<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/llDateStart"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/time_start"
            android:gravity="center_vertical"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/llDateStretch"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/time_strech"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="@color/conversation_text"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/llDateEnd"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/time_end"
            android:gravity="center_vertical"
            android:orientation="vertical" >
        </ImageView>
    </LinearLayout>

</LinearLayout>