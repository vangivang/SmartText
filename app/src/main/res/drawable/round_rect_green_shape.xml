<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- "background shadow" -->
    <item
        android:right="6px"
        android:top="6px">
        <shape android:shape="rectangle" >
            <solid android:color="#c2c2c2" />

            <stroke
                android:width="1dip"
                android:color="#c2c2c2" >
            </stroke>

            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- background color -->
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="0px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="#EEFFB7" />

            <corners android:radius="6dp" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <stroke
                android:width="1dip"
                android:color="#AFD252" >
            </stroke>
        </shape>
    </item>

    <!-- over top shadow -->
    <item android:top="-8dp">
        <shape>
            <solid android:color="#FFF" />

            <size android:height="1dip" />
        </shape>
    </item>

    <!-- background color -->
    <item android:top="-7dp">
        <shape>
            <solid android:color="#EEFFB7" />

            <size android:height="1dip" />
        </shape>
    </item>
    
     <item android:right="-15dp">
        <bitmap
            android:gravity="center|right"
            android:src="@drawable/arrow_green_new_longer" />
    </item>

</layer-list>